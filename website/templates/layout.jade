!!! 5
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      title
        block title
          = locals.name
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Fredericka+the+Great')
      link(rel='stylesheet', href='/css/github.css')
      link(rel='stylesheet', href='/css/main.css')
      link(rel='stylesheet', href='http://yandex.st/highlightjs/7.3/styles/default.min.css')
      script(src='http://yandex.st/highlightjs/7.3/highlight.min.js')
      script hljs.initHighlightingOnLoad();
  body
    header
      div.inner
        block header
          h1
            a(href=locals.url)= locals.name
          p= locals.description
    div#content
      block content
        h2 Welcome to zombocom!
    footer
      div.inner
        block footer
          p &copy; #{ new Date().getFullYear() } 
            a(href=locals.owner.url)= locals.owner.name