extends layout

block scripts
  script(src='//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js')
  script(src='/js/bootstrap.js') 
  script(type='text/javascript')
    $(function(){
      $('.carousel').carousel({interval:10000});
    });

block content
  #highlights
    each highlight in contents.highlights
      .span3!= highlight.html

block subcontent
  #examples
      each example in contents.examples
        .row
          .span9
            div(style="position: relative;height: 400px;")
              .row
                .span9.card-title
                  h4.title= "--> " +  example.title + ":"
              .row.card-content
                p.span3.story= example.metadata.story        
                .span6!= example.html
              img.span9(style="margin-left: 0; position: absolute; top: -10px; left: -30px; z-index: -1;",src="/images/card_shadow.png")
          .span3
            each example in contents.examples
              h4= example.title